# AutoGrader Environment Variables
# Copy this file to .env and fill in your values

# Claude API Key (required)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-api-key-here

# Optional: Override configuration values
# Format: AUTOGRADER_<SECTION>__<KEY>

# LLM Configuration
# AUTOGRADER_LLM__MODEL=claude-sonnet-4-20250514
# AUTOGRADER_LLM__MAX_TOKENS=4096
# AUTOGRADER_LLM__TEMPERATURE=0.0

# Parser Configuration
# AUTOGRADER_PARSER__ENGINE=pymupdf
# AUTOGRADER_PARSER__CACHE_ENABLED=true

# Orchestrator Configuration
# AUTOGRADER_ORCHESTRATOR__MAX_PARALLEL_EVALUATIONS=10
# AUTOGRADER_ORCHESTRATOR__TIMEOUT_SECONDS=300

# Reporting Configuration
# AUTOGRADER_REPORTING__OUTPUT_DIR=workspace/outputs
# AUTOGRADER_REPORTING__FORMATS=markdown,pdf,json

# Logging Level
# LOG_LEVEL=INFO
